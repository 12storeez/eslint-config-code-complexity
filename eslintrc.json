{
  "rules": {
    "complexity": [
      "error",
      5
    ],
    "max-params": [
      "error",
      4
    ],
    "max-statements": [
      "error",
      {
        "max": 7,
        "ignoreTopLevelFunctions": true
      }
    ],
    "max-statements-per-line": [
      "error",
      {
        "max": 1
      }
    ],
    "max-nested-callbacks": [
      "error",
      2
    ],
    "max-depth": [
      "error",
      {
        "max": 3
      }
    ],
    "max-lines": [
      "error",
      {
        "max": 150,
        "skip-blank-lines": true,
        "skip-comments": true
      }
    ]
  }
}